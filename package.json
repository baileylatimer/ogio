{
  "name": "ogio-theme",
  "version": "1.0.0",
  "description": "OGIO Shopify theme with Tailwind CSS",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./assets/tailwind.css --watch",
    "build-once": "tailwindcss -i ./src/input.css -o ./assets/tailwind.css",
    "dev": "concurrently \"npm run build\" \"shopify theme dev\"",
    "dev:theme": "shopify theme dev",
    "dev:css": "npm run build"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "concurrently": "^8.2.2"
  }
}
