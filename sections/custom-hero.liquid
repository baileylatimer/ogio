{% stylesheet %}
  .custom-hero {
    position: relative;
    overflow: hidden;
  }

  .custom-hero__container {
    position: relative;
    display: flex;
    align-items: center;
    z-index: 2;
  }

  /* Desktop: Fixed height */
  @media screen and (min-width: 750px) {
    .custom-hero {
      min-height: 630px;
    }

    .custom-hero__container {
      height: 630px;
    }
  }

  .custom-hero__media-wrapper {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .custom-hero__image,
  .custom-hero__video {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center center;
    z-index: 1;
  }

  .custom-hero__video deferred-media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .custom-hero__video deferred-media video,
  .custom-hero__video deferred-media iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  .custom-hero__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .custom-hero__content-inner {
    max-width: 600px;
  }

  .custom-hero__overline {
    font-family: var(--font-body);
    font-weight: var(--font-weight-regular);
    font-size: 14px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    display: block;
  }

  .custom-hero__headline {
    font-family: var(--font-header);
    font-weight: var(--font-weight-medium);
    font-size: clamp(48px, 8vw, 120px);
    line-height: 0.9;
    text-transform: uppercase;
    margin-bottom: 0;
    margin-top: 0;
  
  }



  .custom-hero__button {
    display: inline-block;
    padding: 16px 48px;
    font-family: var(--font-button);
    font-weight: var(--font-weight-medium);
    font-size: 14px;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  /* Default Colors (Light text on dark background) */
  .custom-hero:not(.custom-hero--inverted) {
    color: var(--color-bg);
  }

  .custom-hero:not(.custom-hero--inverted) .custom-hero__button {
    background-color: var(--color-bg);
    color: var(--color-contrast-higher);
  }

  .custom-hero:not(.custom-hero--inverted) .custom-hero__button:hover {
    background-color: var(--color-contrast-high);
    color: var(--color-bg);
  }

  /* Inverted Colors (Dark text on light background) */
  .custom-hero--inverted {
    color: var(--color-contrast-higher);
  }

  .custom-hero--inverted .custom-hero__button {
    background-color: var(--color-contrast-higher);
    color: var(--color-bg);
  }

  .custom-hero--inverted .custom-hero__button:hover {
    background-color: var(--color-contrast-high);
    color: var(--color-bg);
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .custom-hero {
      min-height: 100vh;
    }

    .custom-hero__container {
      height: 100vh;
      align-items: flex-end;
      padding-bottom: 40px;
    }

    .custom-hero__content {
      padding: 0 var(--spacing-md);
      text-align: center;
    }

    .custom-hero__content-inner {
      max-width: 100%;
    }

    .custom-hero__headline {
      font-size: clamp(32px, 12vw, 64px);
      margin-bottom: 16px;
    }

    .custom-hero__description {
      margin: 0 auto 24px;
      max-width: 320px;
    }

    .custom-hero__button {
      padding: 14px 40px;
      font-size: 13px;
    }
  }

  /* Hide desktop media on mobile */
  @media screen and (max-width: 749px) {
    .custom-hero__media--desktop {
      display: none;
    }
  }

  /* Hide mobile media on desktop */
  @media screen and (min-width: 750px) {
    .custom-hero__media--mobile {
      display: none;
    }
  }

  /* Gradient Overlay Styles */
  .custom-hero__gradient-overlay {
    position: absolute;
    z-index: 2;
    pointer-events: none;
  }

  /* Desktop: Horizontal gradient from left edge to 50% width */
  @media screen and (min-width: 750px) {
    .custom-hero__gradient-overlay {
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background: linear-gradient(90deg, rgba(0, 0, 0, 0.40) 0%, rgba(0, 0, 0, 0.00) 100%);
    }
  }

  /* Mobile: Vertical gradient from bottom edge to 50% height */
  @media screen and (max-width: 749px) {
    .custom-hero__gradient-overlay {
      bottom: 0;
      left: 0;
      width: 100%;
      height: 50%;
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.40) 0%, rgba(0, 0, 0, 0.00) 100%);
    }
  }
{% endstylesheet %}

{% liquid
  assign has_desktop_image = false
  assign has_desktop_video = false
  assign has_mobile_image = false
  assign has_mobile_video = false

  if section.settings.desktop_image != blank and section.settings.desktop_media_type == 'image'
    assign has_desktop_image = true
  endif

  if section.settings.desktop_media_type == 'video'
    if section.settings.desktop_video_source == 'file' and section.settings.desktop_video_file_url != blank
      assign has_desktop_video = true
    elsif section.settings.desktop_video_source == 'upload' and section.settings.desktop_video != blank
      assign has_desktop_video = true
    endif
  endif

  if section.settings.mobile_image != blank and section.settings.mobile_media_type == 'image'
    assign has_mobile_image = true
  endif

  if section.settings.mobile_media_type == 'video'
    if section.settings.mobile_video_source == 'file' and section.settings.mobile_video_file_url != blank
      assign has_mobile_video = true
    elsif section.settings.mobile_video_source == 'upload' and section.settings.mobile_video != blank
      assign has_mobile_video = true
    endif
  endif
%}

<section 
  id="CustomHero-{{ section.id }}"
  class="custom-hero{% if section.settings.invert_colors %} custom-hero--inverted{% endif %}"
>
  <div class="custom-hero__media-wrapper">
    <!-- Desktop Media -->
    {% if has_desktop_image %}
      <div class="custom-hero__media--desktop">
        {{
          section.settings.desktop_image
          | image_url: width: 3840
          | image_tag:
            class: 'custom-hero__image',
            alt: section.settings.desktop_image.alt,
            sizes: '100vw',
            widths: '750, 1100, 1500, 1780, 2000, 3000, 3840'
        }}
      </div>
    {% endif %}

    {% if has_desktop_video %}
      <div class="custom-hero__media--desktop">
        {% if section.settings.desktop_video_source == 'file' %}
          <video
            class="custom-hero__video"
            autoplay
            muted
            loop
            playsinline
            style="position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; object-position: center center; z-index: 1;"
          >
            <source src="{{ section.settings.desktop_video_file_url }}" type="video/mp4">
          </video>
        {% else %}
          {% render 'video',
            video: section.settings.desktop_video,
            video_class: 'custom-hero__video',
            video_autoplay: true,
            video_loop: true,
            disable_controls: true,
            video_style: 'position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; object-position: center center; z-index: 1;'
          %}
        {% endif %}
      </div>
    {% endif %}

    <!-- Mobile Media -->
    {% if has_mobile_image %}
      <div class="custom-hero__media--mobile">
        {{
          section.settings.mobile_image
          | image_url: width: 1500
          | image_tag:
            class: 'custom-hero__image',
            alt: section.settings.mobile_image.alt,
            sizes: '100vw',
            widths: '375, 550, 750, 1100, 1500'
        }}
      </div>
    {% endif %}

    {% if has_mobile_video %}
      <div class="custom-hero__media--mobile">
        {% if section.settings.mobile_video_source == 'file' %}
          <video
            class="custom-hero__video"
            autoplay
            muted
            loop
            playsinline
            style="position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; object-position: center center; z-index: 1;"
          >
            <source src="{{ section.settings.mobile_video_file_url }}" type="video/mp4">
          </video>
        {% else %}
          {% render 'video',
            video: section.settings.mobile_video,
            video_class: 'custom-hero__video',
            video_autoplay: true,
            video_loop: true,
            disable_controls: true,
            video_style: 'position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; object-position: center center; z-index: 1;'
          %}
        {% endif %}
      </div>
    {% endif %}

    <!-- Fallback placeholder if no media -->
    {% unless has_desktop_image or has_desktop_video or has_mobile_image or has_mobile_video %}
      <placeholder-image
        class="custom-hero__image"
        data-block-id="{{ section.id }}"
        data-type="general"
      ></placeholder-image>
    {% endunless %}

    <!-- Gradient Overlay -->
    {% if section.settings.show_gradient_overlay %}
      <div class="custom-hero__gradient-overlay"></div>
    {% endif %}
  </div>

  <div class="custom-hero__container">
    <div class="custom-hero__content">
      <div class="custom-hero__content-inner">
        {% if section.settings.overline != blank %}
          <span class="custom-hero__overline tw-mb-2">{{ section.settings.overline }}</span>
        {% endif %}

        {% if section.settings.headline != blank %}
          <h1 class="custom-hero__headline">{{ section.settings.headline }}</h1>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="custom-hero__description tw-mb-4 h4">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_label != blank and section.settings.button_url != blank %}
          <a 
            href="{{ section.settings.button_url }}" 
            class="custom-hero__button"
            {% if section.settings.button_url contains 'http' %}
              target="_blank" rel="noopener"
            {% endif %}
          >
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

