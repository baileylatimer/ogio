{% stylesheet %}
  .custom-categories {
    position: relative;
    width: 100%;
  }

  .custom-categories__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4px;
    width: 100%;
  }

  /* Desktop: 2 columns */
  @media screen and (min-width: 750px) {
    .custom-categories__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .category-card {
    position: relative;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 40px;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    text-decoration: none;
    overflow: hidden;
  }

  .category-card::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 215px;
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.90) 0%, rgba(0, 0, 0, 0.00) 100%);
    z-index: 1;
    pointer-events: none;
  }

  .category-card__background {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    z-index: 1;
  }

  .category-card__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .category-card__headline {
    margin: 0;
    max-width: 370px;
  }

  .category-card__button {
    display: inline-block;
    padding: 12px 32px;
    font-family: var(--font-button);
    font-weight: var(--font-weight-medium);
    font-size: 14px;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    width: fit-content;
    text-align: center;
  }

  /* Default Colors (Light text, light button) */
  .category-card:not(.category-card--inverted) {
    color: var(--color-bg);
  }

  .category-card:not(.category-card--inverted) .category-card__button {
    background-color: var(--color-bg);
    color: var(--color-contrast-higher);
  }

  .category-card:not(.category-card--inverted) .category-card__button:hover {
    background-color: var(--color-contrast-high);
    color: var(--color-bg);
  }

  /* Inverted Colors (Dark text, dark button) */
  .category-card--inverted {
    color: var(--color-contrast-higher);
  }

  .category-card--inverted .category-card__button {
    background-color: var(--color-contrast-higher);
    color: var(--color-bg);
  }

  .category-card--inverted .category-card__button:hover {
    background-color: var(--color-contrast-high);
    color: var(--color-bg);
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .category-card {
      min-height: 300px;
      padding: 24px;
    }

    .category-card__content {
      gap: 16px;
    }

    .category-card__headline {
      font-size: clamp(20px, 6vw, 28px);
    }

    .category-card__button {
      padding: 10px 24px;
      font-size: 13px;
    }
  }

  /* Placeholder styles when no background image */
  .category-card--no-image {
    background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
  }

  .category-card--no-image.category-card--inverted {
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
  }
{% endstylesheet %}

<section 
  id="CustomCategories-{{ section.id }}"
  class="custom-categories color-{{ section.settings.color_scheme }} section section--{{ section.settings.section_width }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="custom-categories__grid bevel-grid">
    {% for block in section.blocks %}
      {% liquid
        assign has_background_image = false
        if block.settings.background_image != blank
          assign has_background_image = true
        endif

        assign card_classes = 'category-card tw-p-6'
        if block.settings.invert_colors
          assign card_classes = card_classes | append: ' category-card--inverted'
        endif
        unless has_background_image
          assign card_classes = card_classes | append: ' category-card--no-image'
        endunless
      %}

      <div 
        class="{{ card_classes }}"
        {% if has_background_image %}
          style="background-image: url('{{ block.settings.background_image | image_url: width: 800 }}');"
        {% endif %}
        {{ block.shopify_attributes }}
      >
        {% if has_background_image %}
          {{
            block.settings.background_image
            | image_url: width: 800
            | image_tag:
              class: 'category-card__background',
              alt: block.settings.background_image.alt,
              sizes: '(min-width: 750px) 50vw, 100vw',
              widths: '375, 550, 750, 1100, 1500'
          }}
        {% endif %}

        <div class="category-card__content">
          {% if block.settings.headline != blank %}
            <h3 class="category-card__headline">{{ block.settings.headline }}</h3>
          {% endif %}

          {% if block.settings.button_label != blank and block.settings.button_url != blank %}
            <a 
              href="{{ block.settings.button_url }}" 
              class="category-card__button"
              {% if block.settings.button_url contains 'http' %}
                target="_blank" rel="noopener"
              {% endif %}
            >
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}

    {% comment %} Show placeholders in theme editor when no blocks {% endcomment %}
    {% if section.blocks.size == 0 and request.design_mode %}
      {% for i in (1..4) %}
        <div class="category-card category-card--no-image">
          <div class="category-card__content">
            <h3 class="category-card__headline">Category {{ i }}</h3>
            <a href="#" class="category-card__button">Shop Now</a>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

